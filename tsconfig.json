{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "verbatimModuleSyntax": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./src/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/watch/[id]/page.tsx",
    "src/components/Player/getChapterStyle.ts",
    "src/components/Player/artplayerPluginUploadSubtitle.ts",
    "src/components/Player/pluginChapterStyle.ts",
    "src/config/logoTitle.ts",
    "src/config/website.ts",
    "src/components/Episodelist/Episodelist.tsx"
  ],
  "exclude": ["node_modules"]
}
